# scroll through workspaces
bindsym Control+Mod1+Right workspace next_on_output
bindsym Control+Mod1+Left workspace prev_on_output
# file manager
bindsym Mod1+e exec thunar
# gmrun
bindsym Mod1+F2 exec --no-startup-id gmrun
# lock screen
bindsym $mod+l exec --no-startup-id i3lock -i ~/.i3/wallpaper.png
# backlight brightness
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -time 1 -inc 9
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -time 1 -dec 9
# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -M set Master 5%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -M set Master 5%-
bindsym XF86AudioMute exec --no-startup-id amixer -M set Master toggle

